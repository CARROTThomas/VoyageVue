{% extends 'base.html.twig' %}

{% block title %}Test index{% endblock %}

{% block body %}
    <div class="container-lg">
        <h1>Test index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for test in tests %}
                <tr>
                    <td>{{ test.id }}</td>
                    <td>{{ test.name }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('app_test_show', {'id': test.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_test_edit', {'id': test.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_test_new') }}">Create new</a>
    </div>

{% endblock %}
